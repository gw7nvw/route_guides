<div id="place_details">
   <% if !@itemNumber then @itemNumber=1 else @itemNumber+=1 end %>
   <!-- Place title and add/remove buttons if in edit mode-->
   <div class="erow">
          <%=render :partial => 'expand_buttons',  :locals => {:expName => "place"+@itemNumber.to_s, :initialSt => (if @hideAll then 0 else 1 end)} %>
      <%  if(signed_in? and @trip and @trip.class.to_s!="Trip" and !@history) %>
         <%
            thisEditUrl=@url.gsub('xpv'+@place.id.to_s,'xpe'+@place.id.to_s)
         %>
         <div class="leftbuttons">
            <span title="Edit" id="edit<%=@itemNumber.to_s%>">
               <%=  link_to image_tag("/assets/pencil_edit.png", :border=>0, :class => 'dock-item'), thisEditUrl, remote: true, onclick: "linkHandler('editbutton')", id:  "editbutton"  %>
            </span>
         </div>
      <% end %> 

      <%  if(signed_in? and !@trip and !@history) %>
         <div class="leftbuttons">
            <span title="Edit" id="Edit<%=@itemNumber.to_s%>">
                <%=  link_to image_tag("/assets/pencil_edit.png", :border=>0, :class => 'dock-item'), '/places/'+@place.id.to_s+'/edit', remote: true, onclick: "linkHandler('editbutton')", id:  "editbutton"  %>
            </span>

         </div>
      <% end %>

      <div class="sectiontitle25" id="place_title<%=@itemNumber.to_s%>">
          <% link_name=@place.name+" ("+ (if @place.place_owner and @place.place_owner.length>0 then @place.place_owner+" " else "" end) + @place.place_type+") " %>
          <% if !@history %>
            <% if (!@trip) %>
               <%= form_for  @place, :html => {:name => 'placeform'}, remote: true  do |f| %>
                 <%= link_to link_name, @place, remote:true,  remote: true, :id => 'home_link', :onclick => "linkHandler('home_link')" %>
                 <%= f.submit "Add to trip", class: "btn btn-small btn-primary", name: "add", onclick: "linkHandler('addbutton')", id:  "addbutton" %>
               <% end %>
             <% else %>
               <%= link_to link_name, @place, remote:true,  remote: true, :id => 'home_link', :onclick => "linkHandler('home_link')" %> 
             <% end %>
          <% else %>
             <%=link_name%>
          <% end %>

      </div>
   </div>

   <%  # convert to NZTM2000 (EPSG:2193) for display 
       fromproj4s= Projection.find_by_id(4326).proj4
       toproj4s= Projection.find_by_id(2193).proj4
       fromproj=RGeo::CoordSys::Proj4.new(fromproj4s)
       toproj=RGeo::CoordSys::Proj4.new(toproj4s)

       xyarr=RGeo::CoordSys::Proj4::transform_coords(fromproj,toproj,@place.location.x, @place.location.y)
       #convery location to readable format
       x=xyarr[0]
       y=xyarr[1]
   %>

   <!-- Place location and max/mix buttons -->
<div id='place<%=@itemNumber.to_s%>' style='display:<%=if @hideAll then "none" else "block" end%>'>
   <div class="subrow">
      <%=render :partial => 'expand_buttons',  :locals => {:expName => "fw_p"+@itemNumber.to_s, :initialSt => @showForward} %>
      <div class="sectiontitle25" style="font-weight:normal" id="place_locn<%=@itemNumber.to_s%>">
         <%= "NZTM2000: "+x.round().to_s+", "+y.round().to_s %><% if @place.altitude %><%=" (alt: "+@place.altitude.to_i.to_s+"m)"%> <% end %> </div>
   </div>

   <!-- Place location in collapsable diiv -->
   <div id='<%="fw_p"+@itemNumber.to_s%>' class="sectiontext50" style=<%=if (@showForward==1) then "display:block" else "display:none" end %>>
         <%= simple_format(@place.description).html_safe %>
   </div>

   <div class="sectiontext">
      <!-- Place author details (if any) -->
      <% if @history or @trip or @place.placeInstances.count<2%>
          <div class="erow" id="created"> <small color="greyLight">
              Created by: <%= link_to @place.createdBy.name.capitalize, '/users/'+@place.createdBy.name, remote: true%> on <%=@place.firstcreated_at.localtime().strftime("%F")%><% if @place.firstexperienced_at and @place.firstexperienced_at.strftime("%F")>"1900-01-01"%>. Experienced: <%=@place.firstexperienced_at.strftime("%F")%><%end%>
          </small></div>
          <% if !@history and @place.updated_at and @place.firstcreated_at and @place.updated_at.to_i!=@place.firstcreated_at.to_i%>
             <div class="erow" id="updated"> <small color="greyLight">
               Last updated by: <%= link_to @place.updatedBy.name.capitalize, '/users/'+@place.createdBy.name, remote: true%> at <%=@place.updated_at.localtime().strftime("%F %T")%><% if @place.experienced_at and @place.experienced_at.strftime("%F")>"1900-01-01"%>. Experienced: <%=@place.experienced_at.strftime("%F")%><%end%>
             </small> </div>
          <% end %>

       <% else %>

       <div class="erow" id="versionsdiv">
         <div class="rowtitle">Versions:
           <% if !@history and signed_in?%>
             <small color="greyLight" style="font-weight:normal">
                <%= link_to "(Manage versions)", '/history/place-'+@place.id.to_s, remote: true, :id => 'history', :onclick =>"linkHandler('history')" %>
             </small>
           <% end %>
         </div>
       </div>
       <div class="erow">
         <%=select_tag("versions", options_from_collection_for_select(@place.placeInstances.order(:updated_at).reverse, "id", "readable_name", @version), {:multiple => :multiple, :size => [3, @place.placeInstances.count].min, :onchange => 'showVersion()', :class=>'body-select'})%>
       </div>
     <% end %>
   </div>
  </div>
</div>

<script>
/*    reset_map_controllers(); */
    place_init('<%=@place.location%>',1);
</script>
