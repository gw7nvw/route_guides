<div class="erow">
<p>Coordinate format:</p>
<%=select_tag("projections", options_from_collection_for_select(@projections, "epsg", "name", @projection), {:onchange => 'map_updateProjection()', :class=>'body-select'})%>
</div>
<div class="erow">
<p>Route classifiaction:</p>
<%=select_tag("routeclasses", options_from_collection_for_select(@routeclasses, "name", "description", @cat), {:onchange => 'site_updateRouteClass()', :class=>'body-select'})%>
</div>
<ul style="list-style-type:none;padding:0;margin:0;">
<% @items.each do |i| %>
  <li>
  <span style="color:<%=i.linestyle.linecolor%>"><b>&mdash;&mdash; <%=i.name%></b></span>
  </li>
<% end %>
</ul>
