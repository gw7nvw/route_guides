<div class="report_details">
   <!-- Place title and add/remove buttons if in edit mode-->
   <div class="erow">
      <%  if(signed_in? and !@trip and current_user == @report.createdBy) %>
         <div class="leftbuttons">
            <span title="Edit">
                <%=  link_to image_tag("/assets/pencil_edit.png", :border=>0, :class => 'dock-item'), '/reports/'+@report.id.to_s+'/edit', remote: true, onclick: "linkHandler('editbutton')", id:  "editbutton"  %>
            </span>

         </div>
      <% end %>

      <div class="sectiontitle">
          <% link_name=@report.name %>
          <% if !@history %>
     
             <%= link_to link_name, @report, remote:true,  remote: true, :id => 'home_link', :onclick => "linkHandler('home_link')" %>
          <% else %>
             <%=link_name%>
          <% end %>

      </div>
   </div>

   <!-- Place location in collapsable diiv -->
   <div class="erow">
     <%= raw @report.description %>
     <br/>&nbsp;
   </div>



   <!-- Place author details (if any) -->
    <% if @report.createdBy_id %>
       <small color="greyLight">
          Created by: <%= link_to @report.createdBy.name.capitalize, '/users/'+@report.createdBy.name, remote: true%> on <%=@report.firstcreated_at.localtime().strftime("%F %T")%>. Last updated: <%=@report.updated_at.localtime().strftime("%F %T")%>
          <% if !@history %>
             <%= link_to "View history", '/history/report-'+@report.id.to_s, remote: true, :id => 'history', :onclick =>"linkHandler('history')" %>
          <% end %>
       </small>
    <% end %>

</div>

