<% provide(:title, "Report | "+@report.name) %>
<% @title=" | Report | "+@report.name %>
<%= render 'flash' %>

<script> 
   update_title('<%=@title%>'); 
   document.getElementById("page_status").innerHTML = '';
   reset_map_controllers();

   // clear any existing map features
   if (typeof(vectorLayer)!='undefined') vectorLayer.destroyFeatures();

</script>


<%= render 'shared/error_messages' %>
<%= render 'reports/report_details' %>

<%= form_for  @report, :html => {:name => 'reportform'}, remote: true  do |f| %>
      <% if signed_in? %>
         <%=  link_to "Edit", '/reports/'+@report.id.to_s+'/edit', class: "btn btn-large btn-primary", remote: true, onclick: "linkHandler('editbutton')", id:  "editbutton"   %>
      <% end %>
    <% end %>

