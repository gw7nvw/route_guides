<% provide(:title, "Sign in") %>
<% @title=" | Sign in " %>
<%= render 'flash' %>

<script> 
   update_title('<%=@title%>'); 
   document.getElementById("page_status").innerHTML = '';
</script>

 <div class="row">
  <div class="span6">
    <%= form_for(:session, url: sessions_path) do |f| %>

       <div class="erow" >
         <%= "Username / Email" %>
       </div>
      <%= f.text_field :email %>

      <div class="erow" >
        <%= "Password" %>
      </div>
      <%= f.password_field :password %>
      <br/>
     <input type="hidden" name="signin_x" id="signin_x"/>
     <input type="hidden" name="signin_y" id="signin_y"/>
     <input type="hidden" name="signin_zoom" id="signin_zoom"/>
     <input type="hidden" name="referring_url" id="referring_url" value="<%=params[:referring_url]%>"/>

      <%= f.submit "Sign in", class: "btn btn-small btn-primary", onclick: "site_signinHandler()" , id: "signin" %>

      <%= link_to "(forgotton password?)", new_password_reset_path, remote: true %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path, remote: true %></p>
  </div>
</div>
