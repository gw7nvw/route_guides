<% provide(:title, "Sign in") %>
<% @title=" | Sign in " %>
<%= render 'flash' %>

<script> 
   update_title('<%=@title%>'); 
   document.getElementById("page_status").innerHTML = '';
</script>

 <div class="row">
  <div class="span6">
    <%= form_for(:session, url: sessions_path) do |f| %>

       <div class="erow" >
         <%= "Email" %>
       </div>
      <%= f.text_field :email %>

      <div class="erow" >
        <%= "Password" %>
        <%= link_to "(forgotton password?)", new_password_reset_path, remote: true %>
      </div>
      <%= f.password_field :password %>
      <br/>

      <%= f.submit "Sign in", class: "btn btn-small btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path, remote: true %></p>
  </div>
</div>
