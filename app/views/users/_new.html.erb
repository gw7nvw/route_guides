<% provide(:title, 'Sign up') %>
<% @title=" | User | Add " %>
<%= render 'flash' %>

<script> 
   update_title('<%=@title%>'); 
   document.getElementById("page_status").innerHTML = '';
</script>

<h1>Sign up</h1>

<div class="row">
  <div class="span6">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>	

      Username:
      <%= f.text_field :name %>

      <%= "First Name" %>
      <%= f.text_field :firstName %>

      <%= "Last Name" %>
      <%= f.text_field :lastName %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <label for="user_answer"><%="If I have the number of "+Securityquestion.find(@id1).question+Securityoperator.find(@op).operator+"the number of "+Securityquestion.find(@id2).question+", what number do I have?"%></label>
      <input id="user_answer" name="user[answer]" type="text">
      <br/>
      <%= f.submit "Create account", class: "btn btn-small btn-primary" %>
    <% end %>
  </div>
</div>
