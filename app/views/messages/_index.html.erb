<% provide(:title, 'Messages') %>
<% @title=" | Messages" %>
<%= render 'flash' %>
<%= render 'application/mail_status' %>

<script>
   update_title('<%=@title%>');
   reset_map_controllers(<%=if @current_user then @current_user.id.to_s end%>);
   document.getElementById("page_status").innerHTML = '';

$(function () {
  $('#right_panel .pagination a').on('click', function () {
    $.getScript(this.href);
    return false;
  });
});

</script>
<div id="actionbar" class="span7">
   <div id="crumbs"></div>
   <div id="controls">
       <%= render :partial => 'mytrip_button'%>
   </div>
</div>

<div id='place_container'>

  <% if @threads %>
    <div class="name_pagination"> <%= will_paginate(@threads) %></div>

    <% count=0%>
    <% @threads.each do |thread| %>
      <div class="erow">
       <% if (thread.count>1)  %>
           <% @show_message=thread.first %>
           <!-- render 'message_details_brief' --> 
      <% end %>
           <% @show_message=thread.last %>
           <% @count=@counts[count]%>
           <%= render 'message_details_brief' %>
         <div class="hrline">
            <hr noshade size="4">
         </div>
       </div>

       <% count+=1%>
    <% end %>
    <div class="erow"><div class="name_pagination"> <%= will_paginate(@threads) %></div></div>
  <% end %>
  <%=render 'message_form'%>
</div>
