           <p>
             <b> <%= @show_message.fromUser.name+" > "+@show_message.toUser.name %> </b>
             <%=link_to @count[:id].to_s+" messages - Latest: "+@show_message.created_at.strftime("%Y/%m/%d %H:%M"), '/messages/'+@count[:otherUser_id].to_s, remote: true%>

           </p>


     <%if (@show_message.fromUser.id == @current_user.id)%>
          <p class="right-bubble-blue">
     <%else%>
          <p class="right-bubble">
     <% end %>
            <b><%= @show_message.subject %></b><br/>
            <% message=@show_message.message.html_safe
               if  message.length>255 then message=message[0..245]+"... (more)" end %>
            <%= message.html_safe %>
          </p>

